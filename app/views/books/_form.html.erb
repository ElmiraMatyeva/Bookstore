<%= simple_form_for @book, html: { multipart: true } do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> Не удалось сохранить книгу, причина:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.association :category, label: "Категория" %>
  </div>

   <div class="field">
    <%= f.association :author, label: "Автор"%>
  </div>

  <div class="field">
    <%= f.input :title, label: "Название" %>
  </div>

  <div class="field">
    <%= f.input :description, label: "Описание" %>
  </div>
  
  <div>
    <%= f.input :image, as: :file, label: "Обложка" %>
  </div>

  <div class="form-group text-center">
     <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="form-group text-center">
    <strong>Я ознакомился с условиями!</strong>
    <%= f.check_box :terms, {checked: false} %>
  </div>

  <div class="actions">
    <%= f.button :submit, label: "Сохранить книгу" %>
  </div>

<% end %>